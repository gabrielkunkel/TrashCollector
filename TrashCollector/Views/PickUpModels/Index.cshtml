@model IEnumerable<TrashCollector.Models.PickUpModel>

@{
    ViewBag.Title = "Index";
}

<h2>Today's Pick-Ups</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    @Html.ActionLink("Sunday", "IndexByDay", new { day = "Sunday" }) |
    @Html.ActionLink("Monday", "IndexByDay", new { day = "Monday" }) |
    @Html.ActionLink("Tuesday", "IndexByDay", new { day = "Tuesday" }) |
    @Html.ActionLink("Wednesday", "IndexByDay", new { day = "Wednesday" }) |
    @Html.ActionLink("Thursday", "IndexByDay", new { day = "Thursday" }) |
    @Html.ActionLink("Friday", "IndexByDay", new { day = "Friday" }) |
    @Html.ActionLink("Saturday", "IndexByDay", new { day = "Saturday" }) |
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Address.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scheduled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pending)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recurring)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paid)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Customer.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer.Address.StreetAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Scheduled)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Pending)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Completed)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Recurring)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Cost)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Paid)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PickUpId }) |
        @Html.ActionLink("Customer Details", "Details", new { id = item.PickUpId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.PickUpId })
    </td>
</tr>
}

</table>
